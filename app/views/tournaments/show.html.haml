%p#notice= notice

%p
  %b
    = @tournament.name
  at 
  %b 
    = @tournament.location
    \|
  = @tournament.time.strftime('%A, %b %d at %I:%M%p')
  %hr

- if @tournament.time > Time.now
  %table
    %tr
      %th Players

    - @tournament.players.each do |players|
      %tr
        %td= players.name 

  / FIXME create link to add players to the tournament
  Add player to tournament
 
- else
  %table
    %tr
      %th Rank
      %th 
        out of
        =@tournament.players.count
        players.

    - @tournament.players.each do |players|
      %tr
        %td 1
        %td= players.name 

%hr
= link_to 'Edit', edit_tournament_path(@tournament)
\|
= link_to 'Back', tournaments_path
